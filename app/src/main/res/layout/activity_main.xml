<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/beaconbutton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/beaconbutton"
        android:layout_width="364dp"
        android:layout_height="412dp"
        android:contentDescription="Vote Beacon Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:srcCompat="@drawable/beaconoff" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="289dp"
        android:layout_height="69dp"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:text="Press this button to instantly broadcast voting rights information wirelessly over Bluetooth! Information is provided by NALEO.org"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beaconbutton" />
</androidx.constraintlayout.widget.ConstraintLayout>